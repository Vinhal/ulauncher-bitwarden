{
  "required_api_version": "^2.0.0",
  "name": "KeePassXC database",
  "description": "Search for and copy passwords from a KeePassXC database",
  "developer_name": "Peter Bakhirev",
  "icon": "images/icon.svg",
  "options": {
    "query_debounce": 0.5
  },
  "preferences": [
    {
      "id": "search",
      "type": "keyword",
      "name": "KeePassXC database search",
      "description": "Search KeePassXC database",
      "default_value": "kp"
    },
    {
      "id": "database-path",
      "type": "input",
      "name": "Password database location",
      "default_value": "~/passwords.kdbx"
    },
    {
      "id": "max-results",
      "type": "input",
      "name": "Maximum number of results to display",
      "default_value": "6"
    }
  ]
}
